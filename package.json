{
  "name": "cdsol-template",
  "author": "@bretth18 (COMPUTER DATA)",
  "version": "1.0.0",
  "description": "template for solidity smart contract dev w/ forge",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bretth18/cdsol-template.git"
  },
  "scripts": {
    "lint": "solhint --config ./.solhint.json 'src/**/*.sol'",
    "lint:fix": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "format": "prettier --check 'src/**/*.sol'",
    "format:fix": "prettier --write 'src/**/*.sol'"
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.6"
  }
}